<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ckls"
        android:layout_width="144dp"
        android:layout_height="126dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ceklis" />

    <TextView
        android:id="@+id/totalnilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total nilai : 78"
        android:textColor="@color/black"
        android:layout_below="@+id/ckls"
        android:layout_marginLeft="70dp"
        android:textSize="36dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/donemess"
        android:layout_below="@+id/totalnilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginLeft="88dp"
        android:background="@drawable/kotaksolidbiru"
        android:ems="5"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:padding="8dp"
        android:textColor="@color/white"/>

</RelativeLayout>